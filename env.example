# =============================================================================
# JKB Finance Insights - Environment Configuration
# =============================================================================
# Copy this file to .env and modify the values as needed
# cp env.example .env

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server host and port
SERVER_HOST=127.0.0.1
SERVER_PORT=8000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite database file path
DATABASE_URL=finance_insights.db

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================

# OpenAI API Key (Required for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Model
OPENAI_MODEL=gpt-4-vision-preview

# OpenAI Prompt IDs (Required for AI analysis)
OPENAI_PROMPT_BRIEFSTRATEGY_ID=your_prompt_id_here
OPENAI_PROMPT_BRIEFSTRATEGY_VERSION_ID=your_prompt_version_id_here

# =============================================================================
# UI/FRONTEND CONFIGURATION
# =============================================================================

# Feature Toggles
FEATURES_AUTO_REFRESH=true
FEATURES_AI_ANALYSIS=true
FEATURES_DEBUG_MODE=false
FEATURES_HOT_RELOAD=true

# Performance Settings (milliseconds)
PERFORMANCE_REFRESH_INTERVAL=10000  # How often to refresh data
PERFORMANCE_TIMEOUT=30              # Request timeout in seconds

# =============================================================================
# WORKER/TASK CONFIGURATION
# =============================================================================

# Number of background workers
PERFORMANCE_WORKER_COUNT=3

# Task retry settings
TASK_MAX_RETRIES=3
TASK_CLEANUP_DAYS=7

# =============================================================================
# SCRAPER CONFIGURATION
# =============================================================================

# Scraper timeout in seconds
SCRAPER_TIMEOUT=30

# Scraper retry settings
SCRAPER_MAX_RETRIES=3
SCRAPER_RETRY_DELAY=1

# =============================================================================
# AI ANALYSIS CONFIGURATION
# =============================================================================

# Circuit breaker settings for AI operations
AI_CIRCUIT_BREAKER_THRESHOLD=3
AI_CIRCUIT_BREAKER_RESET_MINUTES=60

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# CORS settings
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable detailed error messages
SHOW_DETAILED_ERRORS=true

# Logging
LOG_LEVEL=info

# =============================================================================
# TRADINGVIEW CONFIGURATION
# =============================================================================

# Chart settings
TRADINGVIEW_CHART_HEIGHT=400
TRADINGVIEW_CHART_INTERVAL=1
TRADINGVIEW_CHART_TIMEZONE=America/New_York

# =============================================================================
# APPLICATION INFO
# =============================================================================

# Application name
APP_NAME=JKB Finance Insights