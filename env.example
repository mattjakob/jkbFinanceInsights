# =============================================================================
# JKB Finance Insights - Simplified Configuration
# =============================================================================
# Copy this file to .env and modify the values as needed
# cp env.example .env

# =============================================================================
# CORE SETTINGS (Required)
# =============================================================================

# Application
APP_NAME=JKB Finance Insights
SERVER_PORT=8000
DATABASE_URL=finance_insights.db

# OpenAI API (Required for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# FEATURE TOGGLES (Optional - Smart defaults provided)
# =============================================================================

# Enable/disable features
FEATURES_AUTO_REFRESH=true
FEATURES_AI_ANALYSIS=true
FEATURES_DEBUG_MODE=false
FEATURES_HOT_RELOAD=true

# =============================================================================
# PERFORMANCE SETTINGS (Optional - Smart defaults provided)
# =============================================================================

# Single refresh interval for all components (milliseconds)
PERFORMANCE_REFRESH_INTERVAL=10000

# Worker and timeout settings
PERFORMANCE_WORKER_COUNT=3
PERFORMANCE_TIMEOUT=30

# =============================================================================
# ADVANCED SETTINGS (Optional - Only change if needed)
# =============================================================================

# Server
SERVER_HOST=127.0.0.1

# AI Model
OPENAI_MODEL=gpt-4-vision-preview

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Logging
LOG_LEVEL=info

# =============================================================================
# DEVELOPMENT SETTINGS (Optional - For developers)
# =============================================================================

# Enable detailed error messages
SHOW_DETAILED_ERRORS=true

# CORS settings
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000